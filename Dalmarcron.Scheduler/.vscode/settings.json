{
    "editor.formatOnSave": true,
    // https://code.visualstudio.com/docs/languages/overview#_can-i-map-additional-file-extensions-to-a-language
    "files.associations": {
        "**/.vscode/cspell.json": "jsonc"
    },
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "fullSolution",
    "omnisharp.enableEditorConfigSupport": true,
    "rest-client.environmentVariables": {
        "Development": {
            "API_URL": "http://localhost:5000",
            "BACKOFFICE_CLIENT_ID": "",
            "BACKOFFICE_CLIENT_REDIRECT_URL": "http://localhost:3000/login",
            "BACKOFFICE_CLIENT_SCOPE": "openid profile email sched-rest/bo.adm.sched",
            "BACKOFFICE_CLIENT_URL": "http://localhost:3000",
            "TENANT_CLIENT_ID": "",
            "TENANT_CLIENT_REDIRECT_URL": "http://localhost:3000/login",
            "TENANT_CLIENT_SCOPE": "openid profile email sched-rest/tn.adm",
            "TENANT_CLIENT_URL": "http://localhost:3000",
            "COMMUNITY_CLIENT_ID": "",
            "COMMUNITY_CLIENT_REDIRECT_URL": "http://localhost:3000/login",
            "COMMUNITY_CLIENT_SCOPE": "openid profile email sched-rest/cmty.usr",
            "COMMUNITY_CLIENT_URL": "http://localhost:3000",
            "BATCH_CLIENT_ID": "",
            "BATCH_CLIENT_SCOPE": "sched-rest/job.adm.sched",
            "IAM_URL": "https://dalmarcron-signin.example.com"
        }
    }
}
